---
import { Icon } from 'astro-icon/components'
import { useTranslations, getLangFromUrl } from '../i18n/utils'
import { skillsData } from '../i18n/data'

const lang = getLangFromUrl(Astro.url)
const t = useTranslations(lang)
const skills = skillsData[lang]
---

<section
  id="skills"
  class="col-span-12 md:col-span-6 bento-card reveal"
>
  <h2 class="text-2xl font-bold mb-6 text-white flex items-center gap-2">
    <Icon name="lucide:zap" class="size-6 text-sky-400" />
    {t('skills.title')}
  </h2>

  <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
    {
      Object.entries(skills).map(([category, { icon, items }]) => (
        <div class="space-y-3">
          <h3 class="text-sm font-bold text-neutral-500 uppercase tracking-wider flex items-center gap-2">
            <Icon name={icon} class="size-4" /> {category}
          </h3>
          <div class="flex flex-wrap gap-2">
            {items.map((skill) => (
              <span class="bg-neutral-800/50 text-neutral-300 text-xs font-medium px-2.5 py-1 rounded-lg border border-neutral-700/50 hover:border-sky-500/30 hover:bg-sky-500/5 transition-all duration-300 cursor-default">
                {skill}
              </span>
            ))}
          </div>
        </div>
      ))
    }
  </div>
</section>
