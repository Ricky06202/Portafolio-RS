---
import { Icon } from 'astro-icon/components';
const skills = {
  "Lenguajes de Programación": { icon: "lucide:code-2", items: ["JavaScript", "Python", "Java", "C", "TypeScript"] },
  "Frameworks y Bibliotecas": { icon: "lucide:library", items: ["React", "Next.js", "Angular", "Node.js", "Astro", "Svelte"] },
  "Bases de Datos": { icon: "lucide:database", items: ["MySQL", "PostgreSQL"] },
  "Herramientas": { icon: "lucide:wrench", items: ["Git", "Notion", "Slack", "Vercel", "VS Code"] },
  "Sistemas Operativos": { icon: "lucide:laptop", items: ["Windows", "Linux"] },
  "Idiomas": { icon: "lucide:languages", items: ["Inglés (Intermedio)"] }
};
---
<section id="skills" class="mb-16">
  <h2 class="text-3xl font-bold mb-6 border-b-2 border-cyan-400 pb-2">Habilidades Técnicas e Idiomas</h2>
  
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
    {Object.entries(skills).map(([category, { icon, items }]) => (
      <div class="bg-gray-800 p-6 rounded-lg shadow-lg flex flex-col">
        <h3 class="text-xl font-semibold text-cyan-300 mb-4 flex items-center gap-2"><Icon name={icon} class="size-6" /> {category}</h3>
        <div class="flex flex-wrap gap-2">
          {items.map(skill => (
            <span class="bg-gray-700 text-gray-200 text-sm font-medium px-3 py-1 rounded-full hover:bg-cyan-800/60 transition-colors cursor-default">
              {skill}
            </span>
          ))}
        </div>
      </div>
    ))}
  </div>
</section>
