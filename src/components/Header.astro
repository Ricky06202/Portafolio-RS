---
import LanguagePicker from './LanguagePicker.astro'
import { useTranslations, getLangFromUrl } from '../i18n/utils'

const lang = getLangFromUrl(Astro.url)
const t = useTranslations(lang)
---

<header
  class="fixed top-0 left-0 right-0 z-50 bg-gray-900/90 backdrop-blur-md border-b border-gray-800 shadow-lg"
>
  <div
    class="container mx-auto px-4 md:px-8 h-16 flex items-center justify-between"
  >
    <a
      href={lang === 'es' ? '/' : `/${lang}/`}
      class="text-2xl font-bold text-cyan-400 tracking-tighter hover:text-cyan-300 transition-colors"
    >
      RS
    </a>

    <nav class="hidden md:flex items-center gap-8">
      <a
        href="#about"
        class="text-sm font-medium text-gray-300 hover:text-cyan-400 transition-colors"
        >{t('nav.about')}</a
      >
      <a
        href="#skills"
        class="text-sm font-medium text-gray-300 hover:text-cyan-400 transition-colors"
        >{t('nav.skills')}</a
      >
      <a
        href="#projects"
        class="text-sm font-medium text-gray-300 hover:text-cyan-400 transition-colors"
        >{t('nav.projects')}</a
      >
      <a
        href="#education"
        class="text-sm font-medium text-gray-300 hover:text-cyan-400 transition-colors"
        >{t('nav.education')}</a
      >
    </nav>

    <div class="flex items-center gap-4">
      <LanguagePicker />
    </div>
  </div>
</header>
