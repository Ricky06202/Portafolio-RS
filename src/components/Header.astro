---
import LanguagePicker from './LanguagePicker.astro'
import { useTranslations, getLangFromUrl } from '../i18n/utils'

const lang = getLangFromUrl(Astro.url)
const t = useTranslations(lang)
---

<header class="fixed top-4 left-1/2 -translate-x-1/2 z-50 w-[95%] max-w-5xl">
  <div
    class="bg-neutral-900/80 backdrop-blur-xl border border-neutral-800 rounded-2xl px-6 h-14 flex items-center justify-between shadow-2xl"
  >
    <a
      href={lang === 'es' ? '/' : `/${lang}/`}
      class="text-xl font-black text-white tracking-tighter hover:text-sky-400 transition-all group"
    >
      RS<span class="text-sky-500 group-hover:animate-pulse">.</span>
    </a>

    <nav class="hidden md:flex items-center gap-6">
      <a
        href="#about"
        class="text-xs font-bold uppercase tracking-widest text-neutral-400 hover:text-sky-400 transition-colors"
        >{t('nav.about')}</a
      >
      <a
        href="#skills"
        class="text-xs font-bold uppercase tracking-widest text-neutral-400 hover:text-sky-400 transition-colors"
        >{t('nav.skills')}</a
      >
      <a
        href="#experience"
        class="text-xs font-bold uppercase tracking-widest text-neutral-400 hover:text-sky-400 transition-colors"
        >{t('nav.experience')}</a
      >
      <a
        href="#projects"
        class="text-xs font-bold uppercase tracking-widest text-neutral-400 hover:text-sky-400 transition-colors"
        >{t('nav.projects')}</a
      >
      <a
        href="#education"
        class="text-xs font-bold uppercase tracking-widest text-neutral-400 hover:text-sky-400 transition-colors"
        >{t('nav.education')}</a
      >
      <a
        href="#contact"
        class="text-xs font-bold uppercase tracking-widest text-neutral-400 hover:text-sky-400 transition-colors"
        >{t('nav.contact')}</a
      >
    </nav>

    <div class="flex items-center gap-4">
      <LanguagePicker />
    </div>
  </div>
</header>
