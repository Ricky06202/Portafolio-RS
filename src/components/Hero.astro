---
import { Icon } from 'astro-icon/components'
import profilePic from '@/assets/Profile.jpg'
import { useTranslations, getLangFromUrl } from '../i18n/utils'

const lang = getLangFromUrl(Astro.url)
const t = useTranslations(lang)
---

<section
  class="col-span-12 md:col-span-8 bento-card flex flex-col md:flex-row items-center gap-8 reveal"
>
  <!-- Contenedor de la Imagen -->
  <div class="shrink-0">
    <div class="relative group">
      <div class="absolute -inset-1 bg-gradient-to-r from-sky-500 to-cyan-500 rounded-full blur opacity-25 group-hover:opacity-50 transition duration-1000 group-hover:duration-200"></div>
      <img
        src={profilePic.src}
        alt="Foto de Ricardo Sanjur"
        class="relative size-40 md:size-48 rounded-full object-cover border-2 border-neutral-800 shadow-xl"
      />
    </div>
  </div>
  <!-- Contenedor del Texto -->
  <div class="text-center md:text-left flex-1">
    <div class="inline-flex items-center gap-2 px-3 py-1 rounded-full bg-sky-500/10 border border-sky-500/20 mb-4">
      <span class="relative flex h-2 w-2">
        <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-sky-400 opacity-75"></span>
        <span class="relative inline-flex rounded-full h-2 w-2 bg-sky-500"></span>
      </span>
      <span class="text-[10px] font-bold text-sky-400 uppercase tracking-widest">{t('hero.status')}</span>
    </div>
    <h1 class="text-4xl md:text-5xl lg:text-6xl font-black tracking-tight text-white mb-3">
      Ricardo <span class="text-transparent bg-clip-text bg-gradient-to-r from-sky-400 to-cyan-400">Sanjur</span>
    </h1>
    <p class="text-lg md:text-xl text-neutral-400 font-medium mb-6">
      {t('hero.role')}
    </p>
    <a
      href="/CV_Ricardo_Sanjur.pdf"
      download="CV_Ricardo_Sanjur.pdf"
      class="inline-flex items-center gap-2 px-5 py-2.5 rounded-xl bg-sky-500 text-neutral-950 font-bold text-sm hover:bg-sky-400 transition-all hover:scale-105 shadow-lg shadow-sky-500/20"
    >
      <Icon name="lucide:download" class="size-4" />
      {t('hero.download')}
    </a>
  </div>
</section>
