---
import { Icon } from 'astro-icon/components';
import profilePic from '@/assets/Profile.jpg'; // <-- ¡Asegúrate de que esta ruta y nombre de archivo sean correctos!
---
<section class="flex flex-col md:flex-row items-center justify-center gap-8 md:gap-12 mb-16">
  <!-- Contenedor de la Imagen -->
  <div class="shrink-0">
    <img
      src={profilePic.src} 
      alt="Foto de Ricardo Sanjur" 
      class="size-48 rounded-full object-cover border-4 border-cyan-400/50 shadow-lg"
    />
  </div>
  <!-- Contenedor del Texto -->
  <div class="text-center md:text-left">
    <h1 class="text-4xl md:text-6xl font-bold text-cyan-400 mb-2">
      Ricardo Amado Sanjur Gomez
    </h1>
    <p class="text-xl md:text-2xl text-gray-300 mb-6">
      Ingeniero en Sistemas y Desarrollador Full-stack
    </p>
    <div class="flex justify-center md:justify-start items-center flex-wrap gap-x-6 gap-y-4">
      <a href="https://www.linkedin.com/in/ricardo-amado-sanjur-gomez-61067822b/" target="_blank" rel="noopener noreferrer" class="flex items-center gap-2 text-gray-400 hover:text-cyan-400 transition-colors">
        <Icon name="simple-icons:linkedin" class="size-6" />
        <span class="hidden md:inline">LinkedIn</span>
      </a>
      <a href="https://github.com/Ricky06202" target="_blank" rel="noopener noreferrer" class="flex items-center gap-2 text-gray-400 hover:text-cyan-400 transition-colors">
        <Icon name="simple-icons:github" class="size-6" />
        <span class="hidden md:inline">GitHub</span>
      </a>
      <a href="#" class="flex items-center gap-2 text-gray-400 hover:text-cyan-400 transition-colors">
        <Icon name="lucide:mail" class="size-6" />
        <span class="hidden md:inline">ricardosanjurg@gmail.com</span>
      </a>
      <a href="#" class="flex items-center gap-2 text-gray-400 hover:text-cyan-400 transition-colors">
        <Icon name="lucide:phone" class="size-6" />
        <span class="hidden md:inline">6510-4147</span>
      </a>

    </div>
  </div>
</section>
