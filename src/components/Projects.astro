---
import { Icon } from 'astro-icon/components';
import { useTranslations, getLangFromUrl } from '../i18n/utils';
import { getCollection } from 'astro:content';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const allProjects = await getCollection('projects');
const projects = allProjects
  .sort((a, b) => (a.data.order || 99) - (b.data.order || 99))
  .map((project) => ({
    id: project.id,
    title: project.data.title,
    image: project.data.image,
    imageAlt: project.data.imageAlt[lang as 'es' | 'en' | 'fr'],
    role: project.data.role[lang as 'es' | 'en' | 'fr'],
    description: project.data.description[lang as 'es' | 'en' | 'fr'],
    technologies: project.data.technologies,
    githubUrl: project.data.githubUrl,
    liveUrl: project.data.liveUrl,
  }));
---

<section id="projects" class="col-span-12 reveal">
  <div class="flex items-center gap-4 mb-8">
    <h2 class="text-3xl font-black text-white flex items-center gap-3">
      <Icon name="lucide:folder-git-2" class="size-8 text-sky-400" />
      {t('projects.title')}
    </h2>
    <div class="h-px bg-neutral-800 flex-1"></div>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    {
      projects.map((project) => (
        <div class="group relative overflow-hidden bg-neutral-900/50 backdrop-blur-md border border-neutral-800 rounded-3xl transition-all duration-500 shadow-xl flex flex-col h-full hover:border-sky-500/30">
          <!-- Link envolvente para toda la card -->
          <a 
            href={lang === 'es' ? `/projects/${project.id}` : `/${lang}/projects/${project.id}`}
            class="absolute inset-0 z-10"
            aria-label={project.title}
          ></a>

          <!-- Imagen del Proyecto -->
          <div class="relative overflow-hidden aspect-video">
            <img
              src={project.image.src}
              alt={project.imageAlt}
              class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110"
              transition:name={`project-image-${project.id}`}
            />
            <div class="absolute inset-0 bg-gradient-to-t from-neutral-950 via-transparent to-transparent opacity-60" />
            
            <!-- Links rápidos (Z-index más alto que el overlay de la card) -->
            <div class="absolute bottom-4 right-4 flex gap-2 z-20">
              {project.githubUrl && (
                <a
                  href={project.githubUrl}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="p-2 rounded-xl bg-neutral-900/80 text-white hover:text-sky-400 border border-neutral-700 backdrop-blur-sm transition-all relative"
                  title="GitHub"
                  onclick="event.stopPropagation()"
                >
                  <Icon name="simple-icons:github" class="size-5" />
                </a>
              )}
              {project.liveUrl && (
                <a
                  href={project.liveUrl}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="p-2 rounded-xl bg-neutral-900/80 text-white hover:text-sky-400 border border-neutral-700 backdrop-blur-sm transition-all relative"
                  title="Live"
                  onclick="event.stopPropagation()"
                >
                  <Icon name="lucide:external-link" class="size-5" />
                </a>
              )}
            </div>
          </div>

          <!-- Contenido del Proyecto -->
          <div class="p-6 flex flex-col flex-1 pointer-events-none">
            <div class="block">
              <h3 
                class="text-xl font-bold text-white mb-2 group-hover:text-sky-400 transition-colors"
                transition:name={`project-title-${project.id}`}
              >
                {project.title}
              </h3>
              <p class="text-neutral-500 text-xs font-bold uppercase tracking-wider mb-3">
                {project.role}
              </p>
            </div>
            
            <p class="text-neutral-400 text-sm line-clamp-3 mb-4 flex-1">
              {project.description}
            </p>

            <div class="flex items-center justify-between mt-auto">
              <div class="flex flex-wrap gap-1.5">
                {project.technologies.slice(0, 3).map((tech) => (
                  <span class="px-2 py-0.5 rounded-md bg-sky-500/10 text-sky-400 text-[10px] font-bold border border-sky-500/20">
                    {tech}
                  </span>
                ))}
                {project.technologies.length > 3 && (
                  <span class="px-2 py-0.5 rounded-md bg-neutral-800/50 text-neutral-400 text-[10px] font-bold border border-neutral-700/50">
                    +{project.technologies.length - 3}
                  </span>
                )}
              </div>
              
              <div class="text-sky-400 group-hover:text-sky-300 text-xs font-bold flex items-center gap-1 transition-colors">
                {lang === 'es' ? 'Ver más' : lang === 'fr' ? 'Voir plus' : 'See more'}
                <Icon name="lucide:chevron-right" class="size-4 transition-transform group-hover:translate-x-1" />
              </div>
            </div>
          </div>
        </div>
      ))
    }
    
    <!-- Tile de "Más proyectos" -->
    <a
      href="https://github.com/Ricky06202?tab=repositories"
      target="_blank"
      rel="noopener noreferrer"
      class="group bento-card flex flex-col items-center justify-center text-center p-8 border-dashed border-2 border-neutral-800 hover:border-sky-500/50 transition-all reveal"
    >
      <div class="size-16 rounded-full bg-neutral-900 flex items-center justify-center mb-4 group-hover:scale-110 transition-transform">
        <Icon name="lucide:plus" class="size-8 text-neutral-500 group-hover:text-sky-400" />
      </div>
      <h3 class="text-xl font-black text-white mb-2 uppercase tracking-tighter">
        {lang === 'es' ? 'Ver más proyectos' : lang === 'fr' ? 'Plus de projets' : 'More projects'}
      </h3>
      <p class="text-neutral-500 text-xs font-bold uppercase tracking-widest">
        {lang === 'es' ? 'Explora mi GitHub' : lang === 'fr' ? 'Explorer mon GitHub' : 'Explore my GitHub'}
      </p>
    </a>
  </div>
</section>
