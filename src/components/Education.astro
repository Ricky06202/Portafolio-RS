---
import { Icon } from 'astro-icon/components'
import { useTranslations, getLangFromUrl } from '../i18n/utils'

const lang = getLangFromUrl(Astro.url)
const t = useTranslations(lang)
---

<section
  id="education"
  class="col-span-12 md:col-span-6 lg:col-span-4 bento-card reveal"
>
  <h2 class="text-2xl font-bold mb-6 text-white flex items-center gap-2">
    <Icon name="lucide:graduation-cap" class="size-6 text-sky-400" />
    {t('education.title')}
  </h2>
  <div class="space-y-4">
    <div class="relative pl-6 border-l-2 border-neutral-800">
      <div class="absolute -left-[9px] top-0 size-4 rounded-full bg-neutral-950 border-2 border-neutral-800 group-hover:border-sky-500 transition-colors"></div>
      <h3 class="text-lg font-bold text-white leading-tight">
        {t('education.school.degree')}
      </h3>
      <p class="text-sky-400 font-medium text-sm mt-1">
        {t('education.school.name')}
      </p>
      <p class="text-neutral-500 text-xs mt-1 font-medium">
        {t('education.school.date')}
      </p>
    </div>

    <div class="relative pl-6 border-l-2 border-neutral-800">
      <div class="absolute -left-[9px] top-0 size-4 rounded-full bg-neutral-950 border-2 border-sky-500"></div>
      <h3 class="text-lg font-bold text-white leading-tight">
        {t('education.degree')}
      </h3>
      <p class="text-sky-400 font-medium text-sm mt-1">
        Universidad Tecnológica de Panamá
      </p>
      <p class="text-neutral-500 text-xs mt-1 font-medium">
        {t('education.status')}
      </p>
    </div>
  </div>
</section>
